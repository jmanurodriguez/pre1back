<div class="container">
    <h1 class="text-center mb-4">Agregar Producto</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title h5 mb-3">Agregar Nuevo Producto</h2>
                    <form id="formNewProduct">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="title" placeholder="Ingrese el título" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="description" placeholder="Ingrese la descripción" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="code" placeholder="Ingrese el código" required>
                        </div>
                        <div class="mb-3">
                            <input type="number" class="form-control" name="price" placeholder="Ingrese el precio" required>
                        </div>
                        <div class="mb-3">
                            <input type="number" class="form-control" name="stock" placeholder="Ingrese el stock" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" name="category" placeholder="Ingrese la categoría" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Agregar Producto</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h2 class="h4 mb-3">Lista de Productos</h2>
            <div class="row row-cols-1 row-cols-md-2 g-4" id="productsList">
                {{#each products}}
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">
                                    <strong>Precio:</strong> ${{this.price}}
                                </p>
                                <button class="btn btn-danger btn-sm" onclick="deleteProduct({{this.id}})">
                                    Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>